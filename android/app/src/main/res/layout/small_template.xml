<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/native_ad_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:text="Headline" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/native_ad_attribution_small"
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@drawable/small_backgrund"
                    android:gravity="center"
                    android:text="Ad"
                    android:textColor="#228919"
                    android:textSize="10dp"
                    />
                <TextView
                    android:id="@+id/native_ad_advertiser"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="#848484"
                    android:textSize="@dimen/_8sdp"
                    tools:text="advertiser name" />

            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


    </LinearLayout>

    <TextView
        android:id="@+id/native_ad_body"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_83sdp"
        android:layout_marginTop="@dimen/_53sdp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="#828282"
        android:textSize="@dimen/_8sdp"
        tools:text="body" />

    <ImageView
        android:id="@+id/native_ad_icon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:scaleType="fitXY"
        tools:background="#EDEDED" />

    <Button
        android:id="@+id/native_ad_button"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/background"
        android:text="Apply Now"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textScaleX="0.9"

        />


</com.google.android.gms.ads.nativead.NativeAdView>